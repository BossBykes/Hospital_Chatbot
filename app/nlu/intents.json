{
  "intents": [
    {
      "tag": "directions_parking_info",
      "patterns": [
        "Where can I park",
        "How do I get to the hospital",
        "Parking info",
        "Visitor parking",
        "Directions"
      ],
      "responses": []
    },
    {
      "tag": "visiting_hours",
      "patterns": [
        "What are the visiting hours",
        "Visiting policies",
        "When can I visit",
        "Visiting hours"
      ],
      "responses": [
        "Visiting hours are 8 AM to 8 PM daily, except ICU (10 AM–6 PM)."
      ]
    },
    {
      "tag": "faq_billing_insurance_cafeteria",
      "patterns": [
        "How do I pay my bill",
        "What insurances do you accept",
        "Billing",
        "Insurance",
        "Cafeteria hours"
      ],
      "responses": [
        "Pay at https://hospital.example.com/pay or at the cashier desk on G floor.",
        "We accept Aetna, BCBS, UnitedHealthcare. Cafeteria: 6 AM–8 PM weekdays, 7 AM–7 PM weekends."
      ]
    },
    {
      "tag": "emergency_contact",
      "patterns": [
        "Who do I call in an emergency",
        "Emergency contact",
        "Urgent help number",
        "Emergency procedures"
      ],
      "responses": [
        "Call 112 (or 911 in the US). For on-site emergencies: +49 30 1234 5678."
      ]
    },
    {
      "tag": "appointment_booking",
      "patterns": [
        "How can I book an appointment",
        "Book an appointment",
        "Schedule a visit",
        "Appointment lookup",
        "Schedule appointment"
      ],
      "responses": []
    },
    {
      "tag": "greeting",
      "patterns": ["hello", "hi", "hey", "good morning", "good afternoon"],
      "responses": ["Hello! Welcome to our hospital chatbot—how can I assist you today?"]
    },
    {
      "tag": "thanks",
      "patterns": ["thanks", "thank you", "thx", "appreciate it"],
      "responses": [
        "You're welcome!",
        "Happy to help.",
        "Anytime—let me know if you need anything else."
      ]
    },
    {
      "tag": "acknowledgement",
      "patterns": ["ok", "okay", "great", "nice", "cool"],
      "responses": [
        "Got it.",
        "Sounds good.",
        "Great—what would you like to do next?"
      ]
    },
    {
      "tag": "apology",
      "patterns": ["sorry", "my bad"],
      "responses": [
        "No worries at all.",
        "You're all good.",
        "It's okay—how can I help?"
      ]
    },
    {
      "tag": "frustration",
      "patterns": ["this is not working", "useless", "annoying", "stupid"],
      "responses": [
        "Sorry about that—let me try to help.",
        "I know that's frustrating. Tell me what you need and I'll fix it.",
        "Thanks for your patience. What can I do for you right now?"
      ]
    },
    {
      "tag": "fallback",
      "patterns": [],
      "responses": ["Sorry, I didn't understand that. Could you rephrase?"]
    },
    {
      "tag": "goodbye",
      "patterns": ["bye","goodbye","see you"],
      "responses": ["Goodbye! Let me know if you need anything else."]
    }
  ]
}
